extends layout

block content
  script.
    $(document).ready(function(){
      $('#masternodes-table').dataTable({
        autoWidth: true,
        searching: false,
        ordering: false,
        responsive: true,
        lengthChange: true,
        processing: true,
        ajax: {
          url: '/api/getmasternodes',
          dataSrc: function ( json ) {
            return json.result;
          }
        },
        columns: [
          { data: 'addr', width: '33.3%' },
          { data: 'version', width: '33.3%' },
          { data: 'status', width: '33.3%' },
        ]
      });
    });
  .col-md-12(style="margin-bottom: 4%")
    .panel.panel-default
      .panel-heading
        strong #{settings.locale.mn}
      table#masternodes-table.table.table-bordered.table-striped
        thead
          tr
            th.text-center Masternode address
            th.text-center Version
            th.text-center Status
        tbody.text-center
